<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<body>
    <referenceBlock name="product.info.details">
        <block class="Magento\Catalog\Block\Product\View\Details" name="test.tab" template="Ecommage_HelloWorld::custom_tab.phtml" group="detailed_info" >
            <arguments>
                <argument translate="true" name="title" xsi:type="string">Custom Tab</argument>
                 <argument translate="true" name="tung" xsi:type="string">Danh Tung</argument>
                 <argument name="sort_order" xsi:type="string">220</argument>
            </arguments>
        </block>
    </referenceBlock>

    <referenceBlock name="product.info.details_bak">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">Ecommage_HelloWorld::test.phtml</argument>
        </action>
    </referenceBlock>
</body>
</page>
